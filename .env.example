# AI Hedge Fund System - Environment Configuration

# LLM Provider Selection
# Options: openai, anthropic, gemini (default)
LLM_PROVIDER=gemini

# API Keys for LLM Providers (only one required based on LLM_PROVIDER)

# OpenAI API Key (for GPT models)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key (for Gemini models)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: News API Key (for enhanced sentiment analysis)
# NEWS_API_KEY=your_news_api_key_here

# ========================================
# ADAPTIVE AGENT WEIGHTS (ML-Based)
# ========================================

# Enable adaptive agent weights based on market regime detection
# When enabled, agent weights automatically adjust based on:
# - Bull markets: Higher momentum weight (up to 45%)
# - Bear markets: Higher fundamentals/quality weight (up to 55%)
# - High volatility: Higher quality/safety weight (up to 40%)
# - Low volatility: Higher fundamentals weight (up to 50%)
#
# Default: false (uses static weights 40/30/20/10)
# Set to "true" to enable adaptive intelligence
ENABLE_ADAPTIVE_WEIGHTS=false
